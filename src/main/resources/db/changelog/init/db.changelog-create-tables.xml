<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.21.xsd">

    <!-- Таблица пользователей -->
    <changeSet id="1-create-users-table" author="vladimir">
        <createTable tableName="users">
            <column name="telegram_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="language_code" type="VARCHAR(10)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Таблица сообщений -->
    <changeSet id="2-create-messages-table" author="vladimir">
        <createTable tableName="messages">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="telegram_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_messages_users" references="users(telegram_id)"/>
            </column>
            <column name="role" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="message_text" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Индекс для ускорения поиска сообщений по пользователю -->
    <changeSet id="3-add-index" author="vladimir">
        <createIndex tableName="messages" indexName="idx_messages_user">
            <column name="telegram_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
